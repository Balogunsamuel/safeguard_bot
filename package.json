{
  "name": "safeguard-crypto-bot",
  "version": "1.0.0",
  "description": "Production-ready Telegram bot for crypto community verification and trade tracking",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:bot": "tsx watch src/bot.ts",
    "dev:worker": "tsx watch src/worker.ts",
    "dev:api": "tsx watch src/api.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:bot": "node dist/bot.js",
    "start:worker": "node dist/worker.js",
    "start:api": "node dist/api.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "telegram",
    "bot",
    "crypto",
    "blockchain",
    "solana",
    "ethereum",
    "verification"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "@solana/web3.js": "^1.87.6",
    "axios": "^1.7.0",
    "dotenv": "^16.4.0",
    "ethers": "^6.13.0",
    "express": "^4.19.0",
    "express-rate-limit": "^7.4.0",
    "ioredis": "^5.4.0",
    "telegraf": "^4.16.0",
    "winston": "^3.14.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.0",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "eslint": "^8.57.0",
    "prettier": "^3.3.0",
    "prisma": "^5.22.0",
    "tsx": "^4.15.0",
    "typescript": "^5.4.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

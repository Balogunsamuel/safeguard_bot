// Prisma schema for Safeguard-style Telegram Bot

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Verified users in Telegram groups
model User {
  id           String   @id @default(cuid())
  telegramId   BigInt   @unique
  username     String?
  firstName    String?
  lastName     String?
  isBot        Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  verifications GroupVerification[]

  @@index([telegramId])
  @@map("users")
}

// Telegram groups/chats being monitored
model Group {
  id           String   @id @default(cuid())
  telegramId   BigInt   @unique
  title        String
  type         String   // 'group', 'supergroup', 'channel'
  description  String?
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  verifications GroupVerification[]
  trackedTokens TrackedToken[]

  @@index([telegramId])
  @@map("groups")
}

// User verification status per group
model GroupVerification {
  id         String   @id @default(cuid())
  userId     String
  groupId    String
  verifiedAt DateTime @default(now())
  isVerified Boolean  @default(true)

  // Relations
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@unique([userId, groupId])
  @@index([userId])
  @@index([groupId])
  @@map("group_verifications")
}

// Tokens being tracked for buy/sell alerts
model TrackedToken {
  id              String   @id @default(cuid())
  groupId         String
  chain           String   // 'solana', 'ethereum', 'bsc', etc.
  tokenAddress    String
  tokenSymbol     String
  tokenName       String?
  pairAddress     String?  // DEX pair address
  minAmount       Float    @default(0) // Minimum token amount to trigger alert (deprecated)
  minAmountUsd    Float    @default(0) // Minimum USD value to trigger alert
  whaleThresholdUsd Float  @default(0) // Whale alert threshold in USD
  isActive        Boolean  @default(true)

  // Custom media for alerts
  mediaType       String?  // 'gif', 'image', 'video'
  mediaUrl        String?  // URL or file ID for custom media

  // Custom inline buttons (stored as JSON)
  customButtons   String?  // JSON array of button config: [{text: string, url: string}]

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  group        Group         @relation(fields: [groupId], references: [id], onDelete: Cascade)
  transactions Transaction[]
  emojiTiers   EmojiTier[]

  @@unique([groupId, chain, tokenAddress])
  @@index([chain, tokenAddress])
  @@index([groupId])
  @@map("tracked_tokens")
}

// Blockchain transactions (buys/sells)
model Transaction {
  id              String   @id @default(cuid())
  tokenId         String
  txHash          String
  chain           String
  walletAddress   String
  type            String   // 'buy', 'sell'
  amountToken     Float
  amountNative    Float    // SOL, ETH, BNB, etc.
  priceUsd        Float?
  timestamp       DateTime
  blockNumber     BigInt?
  alertSent       Boolean  @default(false)
  createdAt       DateTime @default(now())

  // Relations
  token TrackedToken @relation(fields: [tokenId], references: [id], onDelete: Cascade)

  @@unique([chain, txHash])
  @@index([tokenId])
  @@index([walletAddress])
  @@index([timestamp])
  @@map("transactions")
}

// Daily statistics per token
model DailyStats {
  id           String   @id @default(cuid())
  date         DateTime
  chain        String
  tokenAddress String
  tokenSymbol  String
  buyCount     Int      @default(0)
  sellCount    Int      @default(0)
  volumeUsd    Float    @default(0)
  uniqueBuyers Int      @default(0)
  uniqueSellers Int     @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@unique([date, chain, tokenAddress])
  @@index([date])
  @@index([chain, tokenAddress])
  @@map("daily_stats")
}

// Admin users with elevated permissions
model Admin {
  id         String   @id @default(cuid())
  telegramId BigInt   @unique
  username   String?
  role       String   @default("admin") // 'admin', 'superadmin'
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([telegramId])
  @@map("admins")
}

// System configuration and settings
model Config {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String
  category  String   @default("general")
  updatedAt DateTime @updatedAt

  @@map("config")
}

// Emoji tiers for dynamic emoji system
model EmojiTier {
  id          String   @id @default(cuid())
  tokenId     String
  minUsd      Float    // Minimum USD value for this tier
  maxUsd      Float?   // Maximum USD value for this tier (null = infinity)
  emoji       String   // Emoji to display
  label       String?  // Optional label (e.g., "Small", "Medium", "Whale")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  token TrackedToken @relation(fields: [tokenId], references: [id], onDelete: Cascade)

  @@index([tokenId])
  @@map("emoji_tiers")
}

// MEV bot blacklist
model MevBlacklist {
  id            String   @id @default(cuid())
  walletAddress String   @unique
  chain         String   // 'solana', 'ethereum', 'bsc', 'all'
  reason        String?  // Why this wallet is blacklisted
  addedBy       String?  // Admin who added it
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([walletAddress])
  @@index([chain])
  @@map("mev_blacklist")
}

// Buy competitions
model Competition {
  id              String   @id @default(cuid())
  groupId         String
  tokenId         String?  // Optional: specific token or all tokens
  name            String
  description     String?
  startTime       DateTime
  endTime         DateTime
  isActive        Boolean  @default(true)
  winnerId        String?  // Winner wallet address
  prizeInfo       String?  // Prize description
  pinnedMessageId Int?     // Telegram message ID of pinned leaderboard
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([groupId])
  @@index([isActive])
  @@map("competitions")
}

// Trending tokens cache
model TrendingToken {
  id           String   @id @default(cuid())
  chain        String
  tokenAddress String
  tokenSymbol  String
  rank         Int
  buyCount1h   Int      // Buys in last hour
  volumeUsd1h  Float    // Volume in last hour
  score        Float    // Trending score
  timestamp    DateTime @default(now())

  @@unique([chain, tokenAddress, timestamp])
  @@index([timestamp])
  @@index([rank])
  @@map("trending_tokens")
}

// ============================================
// SAFEGUARD-STYLE PORTAL SYSTEM MODELS
// ============================================

// Portal configuration for groups
model Portal {
  id                String   @id @default(cuid())
  groupId           String   @unique
  channelId         BigInt   // Public channel (portal) Telegram ID
  channelUsername   String?  // Channel username if available

  // Portal message configuration
  headerText        String   @default("üõ°Ô∏è Welcome to the Group!")
  description       String   @default("Click the button below to verify and join our community.")
  mediaType         String?  // 'photo', 'video', 'animation'
  mediaFileId       String?  // Telegram file ID for media
  mediaUrl          String?  // Optional URL for media

  // Portal message ID
  portalMessageId   Int?     // ID of the portal message in channel

  // Verification settings
  requireCaptcha    Boolean  @default(true)
  requirePremiumBypass Boolean @default(true) // Premium users skip CAPTCHA
  captchaDifficulty String   @default("medium") // 'easy', 'medium', 'hard'

  // Invite link settings
  inviteLinkType    String   @default("one_time") // 'one_time', 'time_limited', 'permanent'
  inviteLinkExpiry  Int      @default(60) // Seconds for time-limited links

  // Trust level settings
  enableTrustLevels Boolean  @default(true)
  level1Duration    Int      @default(86400) // 24 hours in seconds
  level2Duration    Int      @default(604800) // 7 days in seconds

  // Spam control
  spamMode          String   @default("standard") // 'off', 'standard', 'strict', 'anti_raid'
  antiRaidEnabled   Boolean  @default(true)
  raidThreshold     Int      @default(10) // Joins in 60 seconds to trigger raid mode

  // Status
  isActive          Boolean  @default(true)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Relations
  buttons           PortalButton[]
  inviteLinks       InviteLink[]
  verificationAttempts VerificationAttempt[]

  @@index([groupId])
  @@index([channelId])
  @@map("portals")
}

// Custom buttons for portal messages
model PortalButton {
  id         String   @id @default(cuid())
  portalId   String
  text       String
  url        String
  order      Int      @default(0)
  isVerifyButton Boolean @default(false)
  createdAt  DateTime @default(now())

  // Relations
  portal Portal @relation(fields: [portalId], references: [id], onDelete: Cascade)

  @@index([portalId])
  @@map("portal_buttons")
}

// Trust levels for users in groups
model TrustLevel {
  id              String   @id @default(cuid())
  userId          String
  groupId         String
  level           Int      @default(1) // 1 = new, 2 = trusted, 3 = VIP

  // Trust metrics
  joinedAt        DateTime @default(now())
  messageCount    Int      @default(0)
  lastMessageAt   DateTime?

  // Warnings and violations
  warningCount    Int      @default(0)
  violationCount  Int      @default(0)
  lastViolationAt DateTime?

  // Auto-promotion tracking
  lastPromotionAt DateTime?

  // Status
  isMuted         Boolean  @default(false)
  mutedUntil      DateTime?

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([userId, groupId])
  @@index([userId])
  @@index([groupId])
  @@index([level])
  @@map("trust_levels")
}

// Verification attempts and challenges
model VerificationAttempt {
  id              String   @id @default(cuid())
  portalId        String
  telegramUserId  BigInt
  username        String?

  // Challenge details
  challengeType   String   // 'captcha', 'premium_check', 'emoji_match'
  challengeData   String?  // JSON data for challenge (e.g., emoji to select)

  // Status
  status          String   @default("pending") // 'pending', 'solved', 'failed', 'expired'
  attempts        Int      @default(0)
  maxAttempts     Int      @default(3)

  // Premium detection
  isPremium       Boolean  @default(false)

  // Result
  solvedAt        DateTime?
  inviteLinkId    String?  // Link to generated invite

  // Expiry
  expiresAt       DateTime
  createdAt       DateTime @default(now())

  // Relations
  portal Portal @relation(fields: [portalId], references: [id], onDelete: Cascade)

  @@index([portalId])
  @@index([telegramUserId])
  @@index([status])
  @@index([expiresAt])
  @@map("verification_attempts")
}

// Generated invite links
model InviteLink {
  id              String   @id @default(cuid())
  portalId        String
  inviteLink      String   @unique

  // Link configuration
  linkType        String   // 'one_time', 'time_limited', 'permanent'
  memberLimit     Int?     // For one-time links
  expiresAt       DateTime?

  // Usage tracking
  createdFor      BigInt?  // User ID this was created for
  usedBy          BigInt?  // User ID who used it
  usedAt          DateTime?
  isUsed          Boolean  @default(false)
  isRevoked       Boolean  @default(false)

  createdAt       DateTime @default(now())

  // Relations
  portal Portal @relation(fields: [portalId], references: [id], onDelete: Cascade)

  @@index([portalId])
  @@index([inviteLink])
  @@index([createdFor])
  @@index([isUsed])
  @@map("invite_links")
}

// Spam control configuration per group
model SpamConfig {
  id                    String   @id @default(cuid())
  groupId               String   @unique

  // URL filtering
  blockUrls             Boolean  @default(true)
  blockTelegramLinks    Boolean  @default(true)
  blockContractAddresses Boolean @default(false)
  whitelistedDomains    String?  // JSON array of allowed domains

  // Content filtering
  blockLevel1Messages   Boolean  @default(false) // Block all Level 1 messages
  muteLvel1OnJoin       Boolean  @default(true)  // Mute Level 1 users on join

  // Rate limiting
  maxMessagesPerMinute  Int      @default(10)
  maxMessagesPerHour    Int      @default(50)

  // Slowmode for low trust users
  slowmodeLevel1        Int      @default(0) // Seconds between messages for Level 1
  slowmodeLevel2        Int      @default(0) // Seconds between messages for Level 2

  // Auto-actions
  autoDeleteSpam        Boolean  @default(true)
  autoWarnUser          Boolean  @default(true)
  autoMuteAfterWarnings Int      @default(3)
  muteDuration          Int      @default(3600) // Seconds

  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  @@index([groupId])
  @@map("spam_configs")
}

// Scam detection patterns and rules
model ScamPattern {
  id          String   @id @default(cuid())
  pattern     String   // Regex pattern or exact match
  type        String   // 'url', 'telegram_link', 'contract', 'keyword', 'unicode'
  severity    String   @default("medium") // 'low', 'medium', 'high', 'critical'
  description String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([type])
  @@index([isActive])
  @@map("scam_patterns")
}

// Anti-raid tracking
model RaidEvent {
  id              String   @id @default(cuid())
  groupId         String

  // Event details
  joinCount       Int      // Number of joins in window
  timeWindow      Int      @default(60) // Seconds
  triggeredAt     DateTime @default(now())

  // Actions taken
  lockdownEnabled Boolean  @default(false)
  lockdownUntil   DateTime?

  // Users involved
  userIds         String   // JSON array of Telegram user IDs

  // Resolution
  resolved        Boolean  @default(false)
  resolvedAt      DateTime?
  resolvedBy      BigInt?  // Admin who resolved

  createdAt       DateTime @default(now())

  @@index([groupId])
  @@index([triggeredAt])
  @@index([resolved])
  @@map("raid_events")
}

// User message activity for rate limiting
model MessageActivity {
  id              String   @id @default(cuid())
  groupId         String
  telegramUserId  BigInt

  // Activity counters
  messagesLastMinute Int   @default(0)
  messagesLastHour   Int   @default(0)
  lastMessageAt      DateTime @default(now())

  // Violation tracking
  violationCount  Int      @default(0)
  lastViolationAt DateTime?

  // Reset timestamps
  minuteResetAt   DateTime @default(now())
  hourResetAt     DateTime @default(now())

  updatedAt       DateTime @updatedAt

  @@unique([groupId, telegramUserId])
  @@index([groupId])
  @@index([telegramUserId])
  @@map("message_activities")
}
